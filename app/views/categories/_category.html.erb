<% @categories = Category.all %>
<% @categories.each do |category| %>
  <% if category.parent_title == "top" %>
    <dl>
      <dt><%= link_to category.title,category %></dt>      
      <% @categories.each do |category2| %>
      <% if category2.parent_title == category.title %>
      <dd><%= link_to category2.title,category2 %></dd>
      <% end %>          
    <% end %>
    </dl>
  <% end %>
<% end %>
