<h3><%= @category.title %></h3>
<% if @category.parent_title == "top" %>
  <% @categories.each do |category| %>
    <% if category.parent_title == @category.title %>
      <% @products.each do |product| %>
        <% if product.category_title == category.title %>
          <div class = "entry">
            <%= link_to(image_tag(product.image_url), product) %>
		    <h3><%= link_to product.title, product %></h3>
		    <%= truncate(strip_tags(product.description), :length => 400) %>
	        <div class="price_line">
	          <span class="price"><%= number_to_currency(product.price) %></span>
	          <%= button_to t('.add_html'), line_items_path(:product_id => product),:remote => true %>
	        </div>
	      </div>
	    <% end %>
	  <% end %>
    <% end %>
  <% end %>
<% else %>
  <% @products.each do |product| %>
	<% if product.category_title == @category.title %>
	  <div class = "entry">
	    <%= link_to(image_tag(product.image_url), product) %>
	    <h3><%= link_to product.title, product %></h3>
	    <%= truncate(strip_tags(product.description), :length => 400) %>
	    <div class="price_line">
	      <span class="price"><%= number_to_currency(product.price) %></span>
	      <%= button_to t('.add_html'), line_items_path(:product_id => product), :remote => true %>
	    </div>
	  </div>
	<% end %>
  <% end %>
<% end %>

