<h1>Listing carts</h1>

<table class="table">
  <tr>
    <th>Cart ID</th>
    <th>Last update</th>
    <th></th>
  </tr>

<% @carts.each do |cart| %>
  <tr>
    <td><%= cart.id %></td>
    <td><%= cart.updated_at %></td>
    <td>
    	<%= link_to 'Show', cart %> |
    	<%= link_to 'Edit', edit_cart_path(cart) %> |
    	<%= link_to 'Destroy', cart, :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Cart', new_cart_path %>
