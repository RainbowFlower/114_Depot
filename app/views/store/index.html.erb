<% if notice %>
	<script type="text/javascript">
  		$j(document).ready(function(){
  			alertNotice("info", "<%= notice %>", 2000);
  		});
  	</script>
<% end %>

<h1><%= t('.title_html') %></h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= link_to(image_tag(product.image_url), product) %>
    <h3><%= link_to product.title, product %></h3>
    <%= truncate(strip_tags(product.description), :length => 400) %>
    <div class="price_line">
      <span class="price"><%= number_to_currency(product.price) %></span>
      <%= button_to t('.add_html'), line_items_path(:product_id => product), 
      :remote => true , :class => "btn" %>
    </div>
  </div>
<% end %>

<p><%= will_paginate @products %></p>
