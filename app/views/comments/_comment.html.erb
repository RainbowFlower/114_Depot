<div class="comment">	<div class="comment-author">		<span><b><%= comment.user.name %></b> @ <%= comment.created_at.in_time_zone.strftime('%Y-%m-%d %H:%M') %></span>		<% if session[:user_id] %>			<% if session[:admin] or comment.user.name == User.find(session[:user_id]).name %>				<%= link_to t('.delete'), [comment.product, comment],						       :confirm => t('.confirm'),						       :method => :delete, :remote => true %>		 	<% end %>	 	<% end %>	</div>		<div class="comment-body">		<%= comment.body %>	</div></div>
