<div class="comment">	<div class="comment-author">		<span><b><%= comment.user.name %></b> @ <%= comment.created_at %></span>		<% if session[:admin] or comment.user.name == User.find(session[:user_id]).name %>		<%= link_to 'Destroy', [comment.product, comment],		           :confirm => 'Are you sure?',		           :method => :delete %>   	<% end %>	</div>		<div class="comment-body">		<%= comment.body %>	</div></div>