<h1>Listing categories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Ccategory</th>
  </tr>

<% @pcategories.each do |pcategory| %>
  <tr>
    <td><%= link_to pcategory.title, edit_pcategory_path(pcategory) %></td>
    <td>
    <% pcategory.getchildcategories.each do |category| %>
        <%= link_to category.title, edit_ccategory_path(category) %><br />
    <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Pcategory', new_pcategory_path %> | 
<%= link_to 'New Ccategory', new_ccategory_path %>
