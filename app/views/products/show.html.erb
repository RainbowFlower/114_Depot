<% if notice %>
	<p id="notice"><%= notice %></p>
<% end %>

<div>
	<h2><%= @product.title %></h2><br />
	<div class="span2">
		<%= image_tag(@product.image_url, :class => 'product_image') %>
	</div>
	<div class="span6">
		<p><b>Author: </b><%= @product.author %></p>
		<p><b>Punblisher: </b><%= @product.publisher %></p>
		<p><b>ISBN: </b><%= @product.ISBN %></p>
		<p><b>Price: </b><%= number_to_currency(@product.price) %></p>
		<p><b>Category: </b><%= @product.category_title %></p>
	</div>
</div>

<div id="description">
  	<h3>Description</h3>
  	<%= sanitize @product.description %>
</div>

<div>
	<h3>Comments</h3>
	<% @product.comments.each do |comment| %>
		<%= render comment %>
	<% end %>
	<br />
	<% if session[:user_id] %>
		<h4>Leave a Comment</h4>
		<%= render "comments/form" %>
	<% end %>
</div>

<% if session[:admin] %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>

<%= link_to 'Back', products_path %>
