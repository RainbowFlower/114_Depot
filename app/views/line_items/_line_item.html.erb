<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
    <td><%= line_item.quantity %>&times;</th>
    <td style="width:50%"><%= line_item.product.title %></th>
    <td class="item_price"><%= number_to_currency(line_item.total_price) %></th>
	<td><%= link_to 'X', line_item, :method => :delete, :class => ['btn', 'btn-default', 'btn-mini'], :remote => true %></th>
</tr>
