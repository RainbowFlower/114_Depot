<% if notice %>
	<script type="text/javascript">
  		$j(document).ready(function(){
  			alertNotice("info", "<%= notice %>", 2000);
  		});
  	</script>
<% end %>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Group:</b>
  <% if @user.admin == true %> Admin
	<% else %> Customer
	<% end %>
</p>

<p>
  <b>Hashed password:</b>
  <%= @user.hashed_password %>
</p>

<p>
  <b>Salt:</b>
  <%= @user.salt %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> | 
<%= link_to 'Back', request.referer %>

